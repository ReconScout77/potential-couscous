@model IEnumerable<TravelBlog.Models.Experience> 


@{  
    ViewData["Title"] = "Experiences";
 }

 <h2>Experiences</2>
 <h4>@Html.ActionLink("Create new experience", "Create")</h4>


    
	@foreach(var experience in Model)
	{

        <div class="card card-outline-primary mb-3 text-center">    
            <div class="card-block">
		        <blockquote class="card-blockquote">
                    <h5>@Html.DisplayFor(model => experience.Title)</h5>
                    <p>@Html.DisplayFor(model => experience.Location.City), 
                    @Html.DisplayFor(model => experience.Location.Country)</p>
                    <footer>
				        @Html.ActionLink("Details", "Details", new{id = experience.ExperienceId})
                        | @Html.ActionLink("Edit", "Edit", new{id = experience.ExperienceId})
                        | @Html.ActionLink("Delete", "Delete", new{id = experience.ExperienceId})
			        </footer>
                 </blockquote>
            </div>
        </div>
	}
	
