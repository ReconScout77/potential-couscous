@model TravelBlog.Models.Experience

@{
    ViewData["Title"] = "Details";
}
<div class="card mb-3">
	<div class="card-header"> 
        <h2>@Html.DisplayFor(model => model.Title)</h2>
        <h3>@Html.DisplayFor(model => model.Location.City), @Html.DisplayFor(model => model.Location.Country)</h3>
	</div>
    <div class="card-block"> 
        <p>@Html.DisplayFor(model => model.Story)</p>
    </div>
    <div class="card-footer"> 
		<div class="d-flex justify-content-between"> 
            <div class="p-2"><p>@Html.DisplayFor(model => model.EarthTime.Month)/@Html.DisplayFor(model => model.EarthTime.Day)/@Html.DisplayFor(model => model.EarthTime.Year)</p></div>
            <div class="p-2">@Html.ActionLink("Edit Experience", "Edit", new{ id = Model.ExperienceId })</div>
		</div>
	</div>
</div>

<div class="card mb-3">
	<div class="card-header"> 
        <h4>Who was there:</h4>
	</div>
	<div class="card-block"> 

        <ul class="list-group list-group-flush align-items-center">
        @foreach(var person in Model.People)
        {
            <li class="list-group-item" >@Html.ActionLink((string)person.Name, "Details", "People", new{ id = person.PersonId})</li>
        }
        </ul>
	</div>
	<div class="card-footer"> 
        <p>@Html.ActionLink("Add a person to this story", "Create", "People", new{ experienceId = Model.ExperienceId })</p>
    </div>
</div>

<p class="back">@Html.ActionLink("Back to list", "Index")</p>

