@model TravelBlog.Models.Experience

@{

  ViewData["Title"] = "Edit Experience";
}

<h1>Edit experience</h1>

<h2> Edit this experience: @Html.DisplayFor(model => model.Title)</h2>

@using (@Html.BeginForm())

{
@Html.HiddenFor(model => model.ExperienceId)
@Html.HiddenFor(model => model.LocationId)
@Html.HiddenFor(model => model.EarthTime)


<div class="card">
        <div class="card-block">
            
            <div class="d-flex justify-content-center">
                <div class="p-2">
                    <div class="d-flex">
                        <label class="p-2">@Html.LabelFor(model => model.Title):</label>
                        <div class="p-2">@Html.EditorFor(model => model.Title, new {@class="form-control"})</div>
                    </div>
                </div>
                <div class="p-2"> </div>
            </div> 
            <div class="d-flex justify-content-center"> 
                <label class="p-2">@Html.LabelFor(model => model.Story):</label>
                <div class="p-2"> 
                    @Html.TextAreaFor(model => model.Story, new { rows="10", cols="80"})
                </div>
            </div>

            <input type="submit" value="Save" class="btn btn-info">
        </div> 
    </div> 
}


 