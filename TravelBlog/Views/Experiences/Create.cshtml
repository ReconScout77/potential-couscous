@model TravelBlog.Models.Experience

@{
    ViewData["Title"] = "Create New Experience";
}
<h2>Add a New Experience</h2>

@using (Html.BeginForm())
{
    <label>@Html.LabelFor(model => model.Title):</label>
    @Html.TextBoxFor(model => model.Title)
    <br/>
    <label>@Html.LabelFor(model => model.Story):</label>
    @Html.TextAreaFor(model => model.Story)
    <br/>
    <label>@Html.LabelFor(model => model.Location):</label>
    @Html.DropDownList("LocationId")
    <br />
    <label>Date:</label>
    @Html.TextBoxFor(model => model.EarthTime, new { type = "date" })
    <br />
    <input type="submit" value="Create" class="btn btn-info">
}

<p>@Html.ActionLink("Back to experiences", "Index")</p>
