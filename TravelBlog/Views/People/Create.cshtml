@model TravelBlog.Models.Person

@{
    ViewData["Title"] = "Create People";
}

<h2>Add a new person</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ExperienceId)
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    <input type="submit" value="Add new person" class="btn btn-success" /> 
}

<p>@Html.ActionLink("Back to people", "Index")</p>